{% extends 'base.jinja2' %}

{% block subtitle %}Run Projections{% endblock subtitle %}

{% block content %}
   <h3>Projection parameters:</h3>
   <form method="POST">
   	 <label for="min">Min Donation:</label>
	 	<input id="min" type="number" step="0.01" min=0 name="min">
		<br>
	 <label for="max">Max Donation:</label>
	 	<input id="max" type="number" step="0.01" min=0 name="max">
		<br>
	<label for="factor">Multiply Donations by factor:</label>
	       <input id="factor" type="number" step="0.1" min=0 name="factor">
	 <input type="submit" value="Run it!">
   </form>
   {% if info %}
      <table style="width:50%;">
      <tr>
	<th>Donor Name</th>
    	<th>Gifts</th>
    	<th>Avg Gift</th>
    	<th>Total Gift</th>
   	</tr>
   	{% for donor in info %}
   	   <tr>
		<td>{{ donor.donor.name }}</td>
    		<td>{{ donor.num_gift }}</td>
    		<td>${{ donor.avg_gift }}</td>
    		<td>${{ donor.sum_gift }}</td>
   	   </tr>
   	{% endfor %}
   {% endif %}
{% endblock content %}