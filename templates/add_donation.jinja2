{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
   <form method="POST">
   	 <label for="donor">Donor:</label>
	 	<input id="donor" type="text" name="donor">
		<br>
	 <label for="gift">Donation Amount:</label>
	 	<input id="gift" type="number" step="0.01" min=0 name="gift">
		<br>
	 <input type="submit" value="Create Donation">
   </form>
   <h3>Donors:</h3>
   {% for donor in donors %}
   {{ donor.name }}<br>
   {% endfor %}
{% endblock content %}